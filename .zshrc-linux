alias l="ls -Ahl --color"
alias sshflip="ssh manzoj@access.engr.oregonstate.edu"
alias mountflip="sshfs manzoj@access.engr.oregonstate.edu:. ~/flip"
alias unmountflip="fusermount -u ~/flip"

# npm pure prompt goodness, installed globally
# Using this purer -> https://github.com/DFurnes/purer
fpath+=($fpath '/usr/local/lib/node_modules/purer-prompt/functions')
autoload -U promptinit; promptinit
prompt purer
PURE_PROMPT_SYMBOL_COLOR=87ffff

# Terminal colors
LS_COLOR=S$LS_COLORS:'di=0;35:' ; export LS_COLORS

# Tab completions
autoload -U compinit && compinit

zstyle ':completion:*' menu select

cd