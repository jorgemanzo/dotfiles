alias l="exa -lha"
alias ls="exa"
alias c="clear"
alias vim="nvim"
alias cat="bat"

# Terminal colors
# LS_COLOR=S$LS_COLORS:'di=0;35:' ; export LS_COLORS

# Tab completions
autoload -U compinit && compinit

zstyle ':completion:*' menu select

bindkey "^[[1;5C" forward-word
bindkey "^[[1;5D" backward-word
